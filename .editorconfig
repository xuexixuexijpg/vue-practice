# http://editorconfig.org

#统一代码风格

root = true
[*] #表示所有文件适用
charset = utf-8 #设置文件字符集
indent_style = space #缩进风格 tab | space
indent_size = 2 #缩进大小
end_of_line = lf #控制换行类型 lf | cr | crlf
trim_trailing_whitespace = true #去除行首的任意空白符
insert_final_newline = true #始终在末尾插入一个新行

[*.md] #md文件适用以下
max_line_length = off
trim_trailing_whitespace = false
